<%- include('../../partials/header') %>

<div class="container" style="padding: 30px 20px; min-height: 60vh; display: flex; justify-content: center;">
    <div class="auth-card" style="width: 100%; max-width: 600px; margin: 0;">
        <div class="section-header" style="margin-bottom: 20px; border-bottom: 1px solid #eee; padding-bottom: 15px;">
            <h3 class="section-title">Add New Listing</h3>
            <a href="/sme/listings" style="color: var(--text-muted); font-size: 14px; text-decoration: none;"><i class="fas fa-arrow-left"></i> Cancel</a>
        </div>

        <!-- Flash Messages -->
        <% if (locals.error && locals.error.length > 0) { %>
            <div style="color: #721c24; background-color: #f8d7da; border-color: #f5c6cb; padding: 15px; margin-bottom: 20px; border-radius: var(--radius-sm);">
                <%= error %>
            </div>
        <% } %>

        <form action="/sme/listings/add" method="POST" enctype="multipart/form-data">
            
            <!-- Business Selection -->
            <div class="form-group">
                <label for="businessId">Select Business</label>
                <select name="businessId" id="businessId" class="form-control" required onchange="updateFormFields()">
                    <option value="" disabled selected>-- Choose a Business --</option>
                    <% businesses.forEach(biz => { %>
                        <option value="<%= biz._id %>" data-category="<%= biz.category %>"><%= biz.name %> (<%= biz.category %>)</option>
                    <% }) %>
                </select>
            </div>

            <!-- Category Selection -->
            <div class="form-group">
                <label for="category">Category</label>
                <select name="category" id="category" class="form-control" required>
                    <option value="" disabled selected>-- Choose a Category --</option>
                    <% categories.forEach(cat => { %>
                        <option value="<%= cat._id %>" data-type="<%= cat.type %>"><%= cat.name %></option>
                    <% }) %>
                </select>
            </div>

            <div class="form-group">
                <label for="name">Listing Name</label>
                <input type="text" name="name" id="name" class="form-control" placeholder="e.g. Men's Haircut or Organic Honey" required>
            </div>

            <div class="form-group">
                <label for="description">Description</label>
                <textarea name="description" id="description" class="form-control" rows="4" placeholder="Describe your product or service..." required></textarea>
            </div>

            <div class="row" style="display: flex; gap: 15px;">
                <div class="col" style="flex: 1;">
                    <div class="form-group">
                        <label for="price">Price (R)</label>
                        <input type="number" name="price" id="price" class="form-control" step="0.01" min="0" placeholder="0.00" required>
                    </div>
                </div>
                
                <!-- Stock Field (For Products) -->
                <div class="col" style="flex: 1;" id="stockField">
                    <div class="form-group">
                        <label for="stock">Stock Quantity</label>
                        <input type="number" name="stock" id="stock" class="form-control" min="0" value="1">
                    </div>
                </div>

                <!-- Duration Field (For Services) -->
                <div class="col" style="flex: 1; display: none;" id="durationField">
                    <div class="form-group">
                        <label for="duration">Duration (Minutes)</label>
                        <input type="number" name="duration" id="duration" class="form-control" min="1" step="1" value="30">
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label for="image">Listing Image</label>
                <input type="file" name="image" id="image" class="form-control" accept="image/*">
                <small style="color: var(--text-muted);">Recommended size: 500x500px. Max 5MB.</small>
            </div>

            <button type="submit" class="auth-btn">Create Listing</button>
        </form>
    </div>
</div>

<script>
    function updateFormFields() {
        const select = document.getElementById('businessId');
        const selectedOption = select.options[select.selectedIndex];
        const category = selectedOption.getAttribute('data-category');
        
        const stockField = document.getElementById('stockField');
        const durationField = document.getElementById('durationField');

        if (category === 'service') {
            stockField.style.display = 'none';
            durationField.style.display = 'block';
            document.getElementById('stock').required = false;
            document.getElementById('duration').required = true;
        } else {
            // Retail or Food
            stockField.style.display = 'block';
            durationField.style.display = 'none';
            document.getElementById('stock').required = true;
            document.getElementById('duration').required = false;
        }
    }
</script>

<%- include('../../partials/footer') %>
