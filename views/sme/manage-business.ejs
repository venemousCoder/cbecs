<%- include('../partials/header') %>

<div class="container" style="padding: 30px 20px; min-height: 60vh;">
    <div class="section-header">
        <h3 class="section-title">Manage Business: <%= business.name %></h3>
        <div class="user-actions">
            <a href="/sme/dashboard" class="slide-btn" style="padding: 8px 20px; font-size: 13px; background: transparent; color: var(--secondary); border: 1px solid var(--border);"><i class="fas fa-arrow-left"></i> Back</a>
            <form action="/sme/business/<%= business._id %>/delete" method="POST" onsubmit="return confirm('Are you sure? This will delete the business and all its listings permanently.');" style="display: inline;">
                <button type="submit" class="slide-btn" style="padding: 8px 20px; font-size: 13px; background: #fee2e2; color: #dc2626; border: none;">Delete Business</button>
            </form>
        </div>
    </div>

    <!-- Flash Messages -->
    <% if (locals.success && locals.success.length > 0) { %>
        <div style="color: #155724; background-color: #d4edda; border-color: #c3e6cb; padding: 15px; margin-bottom: 20px; border-radius: var(--radius-sm);">
            <%= success %>
        </div>
    <% } %>
    <% if (locals.error && locals.error.length > 0) { %>
        <div style="color: #721c24; background-color: #f8d7da; border-color: #f5c6cb; padding: 15px; margin-bottom: 20px; border-radius: var(--radius-sm);">
            <%= error %>
        </div>
    <% } %>

    <div class="row" style="display: flex; gap: 30px; flex-wrap: wrap;">
        
        <!-- Edit Profile Form -->
        <div class="col" style="flex: 2; min-width: 300px;">
            <div style="background: white; padding: 25px; border-radius: var(--radius-md); box-shadow: var(--shadow-sm);">
                <h4 style="margin-top: 0; margin-bottom: 20px; color: var(--secondary); border-bottom: 1px solid #eee; padding-bottom: 10px;">Business Settings</h4>
                
                <form action="/sme/business/<%= business._id %>/update" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="name">Business Name</label>
                        <input type="text" name="name" id="name" class="form-control" value="<%= business.name %>" required>
                    </div>

                    <div class="form-group">
                        <label for="category">Category (Cannot be changed)</label>
                        <input type="text" class="form-control" value="<%= business.category.toUpperCase() %>" disabled style="background-color: #f9fafb; cursor: not-allowed;">
                    </div>

                    <div class="form-group">
                        <label>Business Type</label>
                        <div style="display: flex; gap: 10px; align-items: center;">
                            <input type="text" class="form-control" value="<%= business.business_type ? business.business_type.toUpperCase() : 'UNKNOWN' %>" disabled style="background-color: #f9fafb; cursor: not-allowed; flex: 1;">
                            
                            <% if (business.changeRequest && business.changeRequest.status === 'pending') { %>
                                <span style="font-size: 12px; color: var(--warning); font-weight: bold;">
                                    <i class="fas fa-clock"></i> Change to <%= business.changeRequest.requestedType %> Pending
                                </span>
                            <% } else { %>
                                <button type="button" onclick="openTypeChangeModal()" style="background: none; border: none; color: var(--primary); font-size: 12px; cursor: pointer; text-decoration: underline;">Request Change</button>
                            <% } %>
                        </div>
                        <% if (business.changeRequest && business.changeRequest.status === 'rejected' && !business.changeRequest.acknowledged) { %>
                            <div style="margin-top: 5px; font-size: 12px; color: var(--danger);">
                                Last Request Rejected: <%= business.changeRequest.adminResponse || 'No reason provided.' %>
                            </div>
                        <% } %>
                    </div>

                    <div class="form-group">
                        <label for="address">Address</label>
                        <input type="text" name="address" id="address" class="form-control" value="<%= business.address %>" required>
                    </div>

                    <div class="form-group">
                        <label for="description">Description</label>
                        <textarea name="description" id="description" class="form-control" rows="4"><%= business.description %></textarea>
                    </div>

                    <div class="form-group">
                        <label for="logo">Update Logo</label>
                        <div style="display: flex; align-items: center; gap: 15px; margin-bottom: 10px;">
                            <img src="<%= business.logo %>" alt="Current Logo" style="width: 60px; height: 60px; object-fit: cover; border-radius: 50%; border: 1px solid #eee;">
                            <input type="file" name="logo" id="logo" class="form-control" accept="image/*" style="flex: 1;">
                        </div>
                    </div>

                    <button type="submit" class="auth-btn" style="width: auto; padding-left: 30px; padding-right: 30px;">Save Changes</button>
                </form>
            </div>
        </div>

        <!-- Quick Actions / Status -->
        <div class="col" style="flex: 1; min-width: 250px;">
            <div style="background: white; padding: 25px; border-radius: var(--radius-md); box-shadow: var(--shadow-sm); margin-bottom: 25px;">
                <h4 style="margin-top: 0; margin-bottom: 15px; color: var(--secondary);">Quick Actions</h4>
                <div style="display: flex; flex-direction: column; gap: 10px;">
                    <% if (business.business_type === 'service') { %>
                        <span class="slide-btn" style="text-align: center; background: #eee; color: #999; cursor: not-allowed;" title="Service businesses cannot list products. To add products, request a business type change.">Add New Listing (Product)</span>
                    <% } else { %>
                        <a href="/sme/listings/add" class="slide-btn" style="text-align: center; background: var(--primary); color: white;">Add New Listing</a>
                    <% } %>
                    <a href="/sme/listings" class="slide-btn" style="text-align: center; background: white; color: var(--secondary); border: 1px solid var(--border);">View All Listings</a>
                </div>
            </div>

            <!-- Future Modules Placeholders -->
            <div style="background: white; padding: 25px; border-radius: var(--radius-md); box-shadow: var(--shadow-sm);">
                <h4 style="margin-top: 0; margin-bottom: 15px; color: var(--secondary);">Management Modules</h4>
                <ul style="list-style: none; padding: 0; margin: 0;">
                    <li style="margin-bottom: 10px; padding: 10px; border: 1px solid #eee; border-radius: var(--radius-sm); display: flex; align-items: center; justify-content: space-between;">
                        <a href="/sme/business/<%= business._id %>/operators" style="text-decoration: none; color: inherit; display: flex; align-items: center; gap: 10px; width: 100%;">
                            <span><i class="fas fa-users"></i> Operators</span>
                            <i class="fas fa-chevron-right" style="font-size: 12px; color: var(--text-muted);"></i>
                        </a>
                    </li>
                    <li style="margin-bottom: 10px; padding: 10px; border: 1px solid #eee; border-radius: var(--radius-sm); display: flex; align-items: center; justify-content: space-between;">
                        <a href="/sme/orders" style="text-decoration: none; color: inherit; display: flex; align-items: center; gap: 10px; width: 100%;">
                            <span><i class="fas fa-shopping-cart"></i> Orders</span>
                            <i class="fas fa-chevron-right" style="font-size: 12px; color: var(--text-muted);"></i>
                        </a>
                    </li>
                    <% if (business.category === 'service') { %>
                        <li style="margin-bottom: 10px; padding: 10px; border: 1px solid #eee; border-radius: var(--radius-sm); display: flex; align-items: center; justify-content: space-between;">
                            <a href="/sme/business/<%= business._id %>/script" style="text-decoration: none; color: inherit; display: flex; align-items: center; gap: 10px; width: 100%;">
                                <span><i class="fas fa-comment-dots"></i> Service Flow Script</span>
                                <i class="fas fa-chevron-right" style="font-size: 12px; color: var(--text-muted);"></i>
                            </a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>

    </div>
</div>

<!-- Type Change Modal -->
<div id="typeChangeModal" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.5); z-index: 1000; align-items: center; justify-content: center;">
    <div style="background: white; padding: 25px; border-radius: var(--radius-md); width: 90%; max-width: 400px;">
        <h4 style="margin-top: 0; color: var(--secondary);">Request Business Type Change</h4>
        <p style="font-size: 13px; color: var(--text-muted);">Current Type: <strong><%= business.business_type.toUpperCase() %></strong></p>
        
        <form action="/sme/business/<%= business._id %>/request-type-change" method="POST">
            <div class="form-group">
                <label for="requestedType" style="font-size: 13px;">New Business Type</label>
                <select name="requestedType" id="requestedType" class="form-control" required>
                    <option value="" disabled selected>Select new type...</option>
                    <% if (business.business_type !== 'retail') { %> <option value="retail">Retail (Sell Products Only)</option> <% } %>
                    <% if (business.business_type !== 'service') { %> <option value="service">Service (Services Only)</option> <% } %>
                    <% if (business.business_type !== 'hybrid') { %> <option value="hybrid">Hybrid (Products + Services)</option> <% } %>
                </select>
            </div>
            
            <div class="form-group">
                <label for="reason" style="font-size: 13px;">Reason for Change</label>
                <textarea name="reason" id="reason" class="form-control" rows="3" placeholder="Why do you need to change your business type?" required></textarea>
            </div>

            <div style="display: flex; gap: 10px; justify-content: flex-end; margin-top: 20px;">
                <button type="button" onclick="closeTypeChangeModal()" class="slide-btn" style="background: transparent; color: var(--text-muted); border: 1px solid var(--border);">Cancel</button>
                <button type="submit" class="slide-btn" style="background: var(--primary); color: white;">Submit Request</button>
            </div>
        </form>
    </div>
</div>

<script>
    function openTypeChangeModal() {
        document.getElementById('typeChangeModal').style.display = 'flex';
    }
    function closeTypeChangeModal() {
        document.getElementById('typeChangeModal').style.display = 'none';
    }
    // Close on click outside
    window.onclick = function(event) {
        const modal = document.getElementById('typeChangeModal');
        if (event.target == modal) {
            modal.style.display = 'none';
        }
    }
</script>

<%- include('../partials/footer') %>
