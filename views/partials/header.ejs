<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title : 'CBECS - Premier Online Marketplace' %></title>
    
    <!-- Preconnect for performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/public/css/home.css">
    <% if (typeof extraCss !== 'undefined' && extraCss) { %>
        <link rel="stylesheet" href="/public/css/<%= extraCss %>">
    <% } %>
    
    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
</head>
<body>
    <header class="main-header">
        <!-- Top Strip -->
        <div class="top-bar">
            <div class="container">
                <div class="top-left">
                    <a href="/business/register" class="top-bar-link"><i class="fas fa-store"></i> Register Your Business (SME)</a>
                </div>
                <div class="top-right" style="display: flex; gap: 20px;">
                    <a href="#" class="top-bar-link">Download App</a>
                    <a href="#" class="top-bar-link">Help Center</a>
                    <a href="#" class="top-bar-link">EN / NGN</a>
                </div>
            </div>
        </div>

        <!-- Main Header Content -->
        <div class="main-navigation-area">
            <div class="container">
                <!-- Logo -->
                <div class="logo">
                    <a href="/">CBECS<span>.</span></a>
                </div>

                <!-- Search -->
                <form class="search-bar" action="/search" method="GET">
                    <div class="search-category">
                        <select name="category">
                            <option value="">All</option>
                            <% if (typeof allCategories !== 'undefined' && allCategories.length > 0) { %>
                                <% allCategories.forEach(cat => { %>
                                    <option value="<%= cat._id %>"><%= cat.name %></option>
                                <% }) %>
                            <% } %>
                        </select>
                    </div>
                    <div style="position: relative; flex: 1;">
                        <input type="text" name="q" placeholder="Search products, services..." required 
                               style="width: 100%; height: 100%; border: none; padding: 0 15px; outline: none;"
                               onfocus="document.getElementById('search-help').style.display='block'" 
                               onblur="setTimeout(() => document.getElementById('search-help').style.display='none', 200)">
                        
                        <!-- Search Help Tooltip -->
                        <div id="search-help" style="display: none; position: absolute; top: 45px; left: 0; width: 100%; background: white; border: 1px solid #eee; border-top: none; border-radius: 0 0 8px 8px; padding: 15px; font-size: 12px; box-shadow: 0 10px 15px -3px rgba(0,0,0,0.1); z-index: 1000; text-align: left; color: #666;">
                            <div style="margin-bottom: 8px; font-weight: 600; color: var(--secondary);">Try searching for...</div>
                            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 10px;">
                                <div>
                                    <span style="color: var(--primary); font-weight: 600; display: block; margin-bottom: 4px;"><i class="fas fa-box"></i> Products</span>
                                    <ul style="list-style: none; padding: 0; margin: 0; color: #888;">
                                        <li>"iPhone 15"</li>
                                        <li>"Men's Sneakers"</li>
                                        <li>"Laptop Charger"</li>
                                    </ul>
                                </div>
                                <div>
                                    <span style="color: #9c27b0; font-weight: 600; display: block; margin-bottom: 4px;"><i class="fas fa-tools"></i> Services</span>
                                    <ul style="list-style: none; padding: 0; margin: 0; color: #888;">
                                        <li>"Screen Repair"</li>
                                        <li>"Hair Salon"</li>
                                        <li>"Home Cleaning"</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="search-button"><i class="fas fa-search"></i></button>
                </form>

                <!-- User Actions -->
                <div class="user-actions">
                    <% if (currentUser) { %>
                        <a href="/logout" class="user-action">
                            <i class="fas fa-sign-out-alt"></i>
                            <span>Logout</span>
                        </a>
                        <% if (currentUser.role === 'sme_owner') { %>
                            <a href="/sme/dashboard" class="user-action">
                                <i class="fas fa-store"></i>
                                <span>Dashboard</span>
                            </a>
                        <% } %>
                        
                        <a href="/notifications" class="user-action" style="position: relative;">
                            <div style="position: relative;">
                                <i class="far fa-bell"></i>
                                <% if (locals.unreadNotifications > 0) { %>
                                    <span class="cart-count-badge" style="background: #d32f2f;"><%= unreadNotifications %></span>
                                <% } %>
                            </div>
                            <span>Alerts</span>
                        </a>

                    <% } else { %>
                        <a href="/login" class="user-action">
                            <i class="far fa-user"></i>
                            <span>Sign In</span>
                        </a>
                    <% } %>
                    
                    <a href="/cart" class="user-action" style="position: relative;">
                        <div style="position: relative;">
                            <i class="fas fa-shopping-cart"></i>
                            <% if (locals.cart && locals.cart.totalQty > 0) { %>
                                <span class="cart-count-badge"><%= locals.cart.totalQty %></span>
                            <% } %>
                        </div>
                        <span>Cart</span>
                    </a>
                </div>
            </div>
        </div>
    </header>
    
    <main class="container">
