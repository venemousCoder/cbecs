<%- include('../../partials/header') %>

<div class="container" style="padding: 30px 20px; min-height: 60vh;">
    <div class="section-header">
        <h3 class="section-title">Business Type Change Requests</h3>
        <div class="user-actions">
            <a href="/admin/dashboard" class="slide-btn" style="padding: 8px 20px; font-size: 13px; background: transparent; color: var(--secondary); border: 1px solid var(--border);">Back to Dashboard</a>
        </div>
    </div>

    <!-- Flash Messages -->
    <% if (locals.success && locals.success.length > 0) { %>
        <div style="color: #155724; background-color: #d4edda; border-color: #c3e6cb; padding: 15px; margin-bottom: 20px; border-radius: var(--radius-sm);">
            <%= success %>
        </div>
    <% } %>
    <% if (locals.error && locals.error.length > 0) { %>
        <div style="color: #721c24; background-color: #f8d7da; border-color: #f5c6cb; padding: 15px; margin-bottom: 20px; border-radius: var(--radius-sm);">
            <%= error %>
        </div>
    <% } %>

    <% if (requests.length === 0) { %>
        <div style="text-align: center; padding: 60px 20px; background: white; border-radius: var(--radius-md); box-shadow: var(--shadow-sm);">
            <h3 style="color: var(--secondary);">No Pending Requests</h3>
            <p style="color: var(--text-muted);">There are no business type change requests at this time.</p>
        </div>
    <% } else { %>
        <div style="background: white; border-radius: var(--radius-md); box-shadow: var(--shadow-sm); overflow: hidden;">
            <table style="width: 100%; border-collapse: collapse;">
                <thead style="background: #f8fafc; border-bottom: 1px solid #eee;">
                    <tr>
                        <th style="padding: 15px; text-align: left; font-size: 13px; color: var(--text-muted);">Business</th>
                        <th style="padding: 15px; text-align: left; font-size: 13px; color: var(--text-muted);">Owner</th>
                        <th style="padding: 15px; text-align: left; font-size: 13px; color: var(--text-muted);">Current Type</th>
                        <th style="padding: 15px; text-align: left; font-size: 13px; color: var(--text-muted);">Requested</th>
                        <th style="padding: 15px; text-align: left; font-size: 13px; color: var(--text-muted);">Reason</th>
                        <th style="padding: 15px; text-align: left; font-size: 13px; color: var(--text-muted);">Date</th>
                        <th style="padding: 15px; text-align: right; font-size: 13px; color: var(--text-muted);">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% requests.forEach(req => { %>
                        <tr style="border-bottom: 1px solid #eee;">
                            <td style="padding: 15px; font-weight: 600; color: var(--secondary);"><%= req.name %></td>
                            <td style="padding: 15px; color: var(--text-muted); font-size: 14px;">
                                <%= req.owner.name %><br>
                                <span style="font-size: 12px;"><%= req.owner.email %></span>
                            </td>
                            <td style="padding: 15px;">
                                <span class="type-badge <%= req.business_type %>" style="font-size: 11px; position: static; display: inline-block; margin: 0;"><%= req.business_type.toUpperCase() %></span>
                            </td>
                            <td style="padding: 15px;">
                                <span class="type-badge <%= req.changeRequest.requestedType %>" style="font-size: 11px; position: static; display: inline-block; margin: 0; background: var(--primary); color: white;"><%= req.changeRequest.requestedType.toUpperCase() %></span>
                            </td>
                            <td style="padding: 15px; font-size: 14px; color: var(--text-muted); max-width: 200px;">
                                <%= req.changeRequest.reason %>
                            </td>
                            <td style="padding: 15px; font-size: 13px; color: var(--text-muted);">
                                <%= new Date(req.changeRequest.requestedAt).toLocaleDateString() %>
                            </td>
                            <td style="padding: 15px; text-align: right;">
                                <div style="display: flex; gap: 5px; justify-content: flex-end;">
                                    <button onclick="openActionModal('<%= req._id %>', 'approve')" class="action-btn" style="background: #dcfce7; color: #166534; width: auto; padding: 6px 12px;" title="Approve">
                                        <i class="fas fa-check"></i>
                                    </button>
                                    <button onclick="openActionModal('<%= req._id %>', 'reject')" class="action-btn" style="background: #fee2e2; color: #991b1b; width: auto; padding: 6px 12px;" title="Reject">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    <% } %>
</div>

<!-- Action Modal -->
<div id="actionModal" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.5); z-index: 1000; align-items: center; justify-content: center;">
    <div style="background: white; padding: 25px; border-radius: var(--radius-md); width: 90%; max-width: 400px;">
        <h4 id="modalTitle" style="margin-top: 0; color: var(--secondary);">Process Request</h4>
        
        <form action="/admin/smes/requests/handle" method="POST">
            <input type="hidden" name="businessId" id="modalBusinessId">
            <input type="hidden" name="action" id="modalAction">
            
            <div class="form-group">
                <label for="adminResponse" style="font-size: 13px;">Admin Response (Optional)</label>
                <textarea name="adminResponse" id="adminResponse" class="form-control" rows="3" placeholder="Reason for approval/rejection..."></textarea>
            </div>

            <div style="display: flex; gap: 10px; justify-content: flex-end; margin-top: 20px;">
                <button type="button" onclick="closeActionModal()" class="slide-btn" style="background: transparent; color: var(--text-muted); border: 1px solid var(--border);">Cancel</button>
                <button type="submit" id="modalSubmitBtn" class="slide-btn" style="background: var(--primary); color: white;">Confirm</button>
            </div>
        </form>
    </div>
</div>

<script>
    function openActionModal(businessId, action) {
        document.getElementById('modalBusinessId').value = businessId;
        document.getElementById('modalAction').value = action;
        
        const title = action === 'approve' ? 'Approve Request' : 'Reject Request';
        document.getElementById('modalTitle').innerText = title;
        
        const btn = document.getElementById('modalSubmitBtn');
        if (action === 'approve') {
            btn.style.background = 'var(--success)';
            btn.innerText = 'Approve';
        } else {
            btn.style.background = 'var(--danger)';
            btn.innerText = 'Reject';
        }
        
        document.getElementById('actionModal').style.display = 'flex';
    }

    function closeActionModal() {
        document.getElementById('actionModal').style.display = 'none';
    }
    
    window.onclick = function(event) {
        if (event.target == document.getElementById('actionModal')) {
            closeActionModal();
        }
    }
</script>

<%- include('../../partials/footer') %>