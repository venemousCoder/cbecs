<%- include('../partials/header') %>

<div class="container" style="padding: 30px 20px; min-height: 60vh;">
    <div class="section-header">
        <div>
            <h3 class="section-title">Search Results</h3>
            <p style="color: var(--text-muted); font-size: 14px;">Showing results for "<span style="font-weight: bold; color: var(--secondary);"><%= query %></span>"</p>
        </div>
    </div>

    <% if (listings.length === 0) { %>
        <div style="text-align: center; padding: 60px 20px; background: white; border-radius: var(--radius-md); box-shadow: var(--shadow-sm);">
            <div style="font-size: 48px; color: var(--text-muted); margin-bottom: 20px;">
                <i class="fas fa-search-minus"></i>
            </div>
            <h3 style="color: var(--secondary);">No Results Found</h3>
            <p style="color: var(--text-muted); max-width: 400px; margin: 0 auto 30px;">We couldn't find anything matching your search. Try different keywords.</p>
            <a href="/categories" class="search-button" style="display: inline-block; text-decoration: none;">Browse Categories</a>
        </div>
    <% } else { %>
        <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(220px, 1fr)); gap: 20px;">
            <% listings.forEach(item => { %>
                <a href="/listing/<%= item._id %>" class="product-card" style="text-decoration: none; color: inherit;">
                    <div class="product-img" style="height: 180px; background: #f9fafb;">
                        <img src="<%= item.image %>" alt="<%= item.name %>" style="width: 100%; height: 100%; object-fit: cover;">
                    </div>
                    <div class="product-info">
                        <div class="type-badge <%= item.type %>"><%= item.type.toUpperCase() %></div>
                        <h4 class="product-title"><%= item.name %></h4>
                        <p style="font-size: 12px; color: var(--text-muted); margin-bottom: 5px;"><%= item.business.name %></p>
                        <div class="product-meta">
                            <span class="price">R<%= item.price.toFixed(2) %></span>
                            <span class="rating"><i class="fas fa-star"></i> 4.5</span>
                        </div>
                    </div>
                </a>
            <% }) %>
        </div>
    <% } %>
</div>

<%- include('../partials/footer') %>
