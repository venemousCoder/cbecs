<%- include('./partials/header') %>

<div class="container" style="padding: 30px 20px; min-height: 60vh;">
    <div class="section-header">
        <div>
            <h3 class="section-title">Search Results</h3>
            <p style="color: var(--text-muted); font-size: 14px;">Showing results for "<span style="font-weight: bold; color: var(--secondary);"><%= query %></span>"</p>
        </div>
    </div>

    <div class="search-layout" style="display: flex; gap: 30px; align-items: flex-start;">
        <!-- Filter Sidebar -->
        <aside class="filter-sidebar" style="width: 250px; flex-shrink: 0; background: white; padding: 20px; border-radius: var(--radius-md); box-shadow: var(--shadow-sm);">
            <h4 style="margin-top: 0; margin-bottom: 15px; font-size: 16px; border-bottom: 1px solid #eee; padding-bottom: 10px;">Filters</h4>
            
            <form action="/search" method="GET">
                <input type="hidden" name="q" value="<%= query %>">
                
                <!-- Category Filter -->
                <!-- Categories are not currently passed, we can enable this if we fetch categories in search controller -->
                <!-- 
                <div class="filter-group" style="margin-bottom: 20px;">
                    <label style="display: block; font-size: 13px; font-weight: 600; margin-bottom: 8px;">Category</label>
                    <select name="category" style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px; font-size: 13px;">
                        <option value="">All Categories</option>
                        ...
                    </select>
                </div>
                -->

                <!-- Type Filter -->
                <div class="filter-group" style="margin-bottom: 20px;">
                    <label style="display: block; font-size: 13px; font-weight: 600; margin-bottom: 8px;">Type</label>
                    <select name="type" style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px; font-size: 13px;">
                        <option value="all">All Types</option>
                        <option value="product" <%= typeFilter === 'product' ? 'selected' : '' %>>Product</option>
                        <option value="service" <%= typeFilter === 'service' ? 'selected' : '' %>>Service Business</option>
                    </select>
                </div>

                <!-- Sort Filter -->
                <div class="filter-group" style="margin-bottom: 20px;">
                    <label style="display: block; font-size: 13px; font-weight: 600; margin-bottom: 8px;">Sort By</label>
                    <select name="sort" style="width: 100%; padding: 8px; border: 1px solid #ddd; border-radius: 4px; font-size: 13px;">
                        <option value="relevance" <%= sort === 'relevance' ? 'selected' : '' %>>Relevance</option>
                        <option value="price_asc" <%= sort === 'price_asc' ? 'selected' : '' %>>Price: Low to High</option>
                        <option value="price_desc" <%= sort === 'price_desc' ? 'selected' : '' %>>Price: High to Low</option>
                        <option value="wait_asc" <%= sort === 'wait_asc' ? 'selected' : '' %>>Wait Time: Low to High</option>
                    </select>
                </div>

                <button type="submit" class="search-button" style="width: 100%; padding: 10px; border-radius: 4px;">Apply Filters</button>
                <a href="/search?q=<%= query %>" style="display: block; text-align: center; margin-top: 10px; font-size: 12px; color: var(--text-muted);">Clear Filters</a>
            </form>
        </aside>

        <!-- Results Grid -->
        <div class="results-container" style="flex: 1;">
            <% if (results.length === 0) { %>
                <div style="text-align: center; padding: 60px 20px; background: white; border-radius: var(--radius-md); box-shadow: var(--shadow-sm);">
                    <div style="font-size: 48px; color: var(--text-muted); margin-bottom: 20px;">
                        <i class="fas fa-search-minus"></i>
                    </div>
                    <h3 style="color: var(--secondary);">No Results Found</h3>
                    <p style="color: var(--text-muted); max-width: 400px; margin: 0 auto 30px;">We couldn't find anything matching your search and filters.</p>
                    <a href="/search?q=<%= query %>" class="search-button" style="display: inline-block; text-decoration: none;">Clear Filters</a>
                </div>
            <% } else { %>
                <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(250px, 1fr)); gap: 20px;">
                    <% results.forEach(item => { %>
                        <% if (item.type === 'product') { %>
                            <!-- Product Card -->
                            <a href="/listing/<%= item.referenceId %>" class="product-card" style="text-decoration: none; color: inherit;">
                                <div class="product-img" style="height: 180px; background: #f9fafb; position: relative;">
                                    <img src="<%= item.image || '/public/assets/default-product.png' %>" alt="<%= item.title %>" style="width: 100%; height: 100%; object-fit: cover;">
                                    <span class="badge-product" style="position: absolute; top: 10px; left: 10px; background: var(--primary); color: white; padding: 2px 8px; font-size: 10px; border-radius: 4px;">PRODUCT</span>
                                </div>
                                <div class="product-info" style="padding: 15px;">
                                    <h4 class="product-title" style="font-size: 15px; font-weight: 600; margin: 0 0 5px;"><%= item.title %></h4>
                                    <p style="font-size: 12px; color: var(--text-muted); margin-bottom: 10px;"><%= item.business_name %></p>
                                    <div class="product-meta" style="display: flex; justify-content: space-between; align-items: center;">
                                        <span class="price" style="font-weight: bold; color: var(--secondary);">R<%= item.price ? item.price.toFixed(2) : '0.00' %></span>
                                    </div>
                                </div>
                            </a>
                        <% } else if (item.type === 'service_business') { %>
                            <!-- Service Business Card -->
                            <a href="/service/shop/<%= item.referenceId %>" class="product-card service-card" style="text-decoration: none; color: inherit; border-left: 4px solid var(--accent);">
                                <div class="product-img" style="height: 140px; background: #f9fafb; position: relative;">
                                    <img src="<%= item.image || '/public/assets/default-business.png' %>" alt="<%= item.title %>" style="width: 100%; height: 100%; object-fit: cover;">
                                    <span class="badge-service" style="position: absolute; top: 10px; left: 10px; background: var(--accent); color: white; padding: 2px 8px; font-size: 10px; border-radius: 4px;">SERVICE</span>
                                </div>
                                <div class="product-info" style="padding: 15px;">
                                    <h4 class="product-title" style="font-size: 15px; font-weight: 600; margin: 0 0 5px;"><%= item.title %></h4>
                                    
                                    <div style="font-size: 11px; color: #555; margin-bottom: 10px; min-height: 30px;">
                                        <% if (item.services_offered && item.services_offered.length > 0) { %>
                                            <%= item.services_offered.slice(0, 3).join(' â€¢ ') %> <%= item.services_offered.length > 3 ? '...' : '' %>
                                        <% } else { %>
                                            General Services
                                        <% } %>
                                    </div>

                                    <div class="service-meta" style="display: flex; gap: 10px; font-size: 11px; color: var(--text-muted); border-top: 1px solid #eee; padding-top: 8px;">
                                        <span><i class="fas fa-users"></i> <%= item.operator_count || 0 %> ops</span>
                                        <span><i class="fas fa-clock"></i> <%= item.avg_wait_time || '0 min' %> wait</span>
                                    </div>
                                </div>
                            </a>
                        <% } %>
                    <% }) %>
                </div>

                <!-- Pagination -->
                <% if (locals.pagination && pagination.totalPages > 1) { %>
                    <div class="pagination" style="display: flex; justify-content: center; gap: 10px; margin-top: 30px; align-items: center;">
                        <% if (pagination.page > 1) { %>
                            <a href="/search?q=<%= query %>&type=<%= typeFilter %>&sort=<%= sort %>&page=<%= pagination.page - 1 %>" class="slide-btn" style="padding: 8px 15px; background: white; color: var(--secondary); border: 1px solid #ddd;">&laquo; Previous</a>
                        <% } %>

                        <span style="font-size: 13px; color: var(--text-muted); font-weight: 600;">Page <%= pagination.page %> of <%= pagination.totalPages %></span>

                        <% if (pagination.page < pagination.totalPages) { %>
                            <a href="/search?q=<%= query %>&type=<%= typeFilter %>&sort=<%= sort %>&page=<%= pagination.page + 1 %>" class="slide-btn" style="padding: 8px 15px; background: white; color: var(--secondary); border: 1px solid #ddd;">Next &raquo;</a>
                        <% } %>
                    </div>
                <% } %>
            <% } %>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>