<%- include('partials/header', { extraCss: 'auth.css', title: 'Create Account - CBECS' }) %>

<div class="auth-container">
    <div class="auth-card" style="max-width: 450px;">
        <div class="auth-header">
            <h2>Create Account</h2>
            <p>Join CBECS to buy, sell & book services</p>
        </div>

        <!-- Flash Messages (if any) -->
        <% if (locals.error && locals.error.length > 0) { %>
            <div style="color: var(--danger); background: #ffebee; padding: 10px; border-radius: var(--radius-sm); margin-bottom: 15px; font-size: 13px; text-align: center;">
                <%= error %>
            </div>
        <% } %>
        
        <!-- Validation Errors -->
        <% if (typeof errors !== 'undefined') { %>
            <% errors.forEach(function(error) { %>
                <div style="color: var(--danger); background: #ffebee; padding: 10px; border-radius: var(--radius-sm); margin-bottom: 15px; font-size: 13px; text-align: center;">
                    <%= error.msg %>
                </div>
            <% }); %>
        <% } %>

        <form action="/signup" method="POST" class="auth-form">
            <div class="form-group">
                <label for="name">Full Name</label>
                <input type="text" id="name" name="name" placeholder="Enter your full name" value="<%= typeof name != 'undefined' ? name : '' %>" required>
            </div>

            <div class="form-group">
                <label for="email">Email Address</label>
                <input type="email" id="email" name="email" placeholder="name@example.com" value="<%= typeof email != 'undefined' ? email : '' %>" required>
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" placeholder="Create a strong password" required minlength="6">
            </div>

            <div class="form-group">
                <label for="confirm-password">Confirm Password</label>
                <input type="password" id="confirm-password" name="confirmPassword" placeholder="Confirm your password" required minlength="6">
            </div>
            
            <div style="margin-bottom: 20px; font-size: 12px; color: var(--text-muted);">
                By clicking "Create Account", you agree to our <a href="#" style="color: var(--primary);">Terms of Service</a> and <a href="#" style="color: var(--primary);">Privacy Policy</a>.
            </div>

            <button type="submit" class="btn-auth">Create Account</button>
        </form>

        <div class="auth-footer">
            Already have an account? <a href="/login">Sign In</a>
            <br><br>
            <span>Want to sell on CBECS?</span>
            <a href="/business/register" style="font-weight: 600; color: var(--primary);"> Register as a Business</a>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
